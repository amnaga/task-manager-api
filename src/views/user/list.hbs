<div class="container-fluid py-4">
      <div class="row">
        <div class="col-12">
          <div class="card mb-4">
              <div class="card-header">
              <div class="row align-items-center">
                <div class="col-8">
                  <h3 class="mb-0">List Profile</h3>
                </div>
                <div class="col-4 text-right">
                  <a class="btn btn-sm btn-primary" href="/users/createuser"><i class="fa fa-list-alt"></i> Add new user</a>
                </div>
              </div>
            </div>
            <div class="card-body px-0 pt-0 pb-2">
              <div class="table-responsive p-0">
                <table class="table align-items-center mb-0">
                  <thead>
                    <tr>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Id</th>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Name</th>
                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Email</th>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Age</th>
                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Edit/Delete</th>
                </tr>
                  </thead>
                  <tbody>

                      {{#each list}}
                        {{#each this}}
                            {{#if this.name}}
                            <tr>
                                <td>
                                    <div class="d-flex px-2 py-1">
                                        <div>
                                          {{#if this.avatar}}
                                            <img class="avatar avatar-sm me-3" alt="user1" src="http://127.0.0.1:3000/apiusers/{{this._id}}/avatar" />
                                          {{else}}
                                            <img src="../assets/img/team-2.jpg" class="avatar avatar-sm me-3" alt="user1">
                                          {{/if}}
                                        </div>
                                        <div class="d-flex flex-column justify-content-center">
                                            <h6 class="mb-0 text-sm">{{this._id}}</h6>
                                            <p class="text-xs text-secondary mb-0">{{this.email}}</p>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <p class="text-xs font-weight-bold mb-0">{{this.name}}</p>
                                    <p class="text-xs text-secondary mb-0">Fullname</p>
                                </td>
                                <td class="align-middle text-center text-sm">
                                    <h6 class="mb-0 text-sm">{{this.email}}</h6>
                                </td>
                                <td class="align-middle text-center text-sm">
                                    <span class="badge badge-sm bg-gradient-success">{{this.age}}</span>
                                </td>
                                
                                <td class="align-middle text-center text-sm">
                                    <a href="/users/createuser/{{this._id}}"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                                    <a href="/users/delete/{{this._id}}" onclick="return confirm('Are you sure to delete this record?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
                                </td>
                            </tr>
                            {{/if}}
                        {{/each}}
                    {{/each}}
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>