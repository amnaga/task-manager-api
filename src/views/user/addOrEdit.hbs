
<div class="container-fluid mt--6">
      <div class="row">
        
        <div class="col-xl-8 order-xl-1">
          <div class="card">
            <div class="card-header">
              <div class="row align-items-center">
                <div class="col-8">
                  <h3 class="mb-0">{{viewTitle}}</h3>
                </div>
                <div class="col-4 text-right">
                    <a class="btn btn-sm btn-primary" href="/users/list"><i class="fa fa-list-alt"></i> View All Users</a>
                </div>
              </div>
            </div>
            <div class="card-body">
              <form action="/users" method="POST">
                <h6 class="heading-small text-muted mb-4">User information</h6>
                <input type="hidden" name="_id" value="{{#each userFormData}}{{#if name}}{{_id}}{{/if}}{{/each}}" />
                <div class="pl-lg-4">
                  <div class="row">
                    <div class="col-lg-6">
                      <div class="form-group">
                        <label class="form-control-label" for="input-username">Full name</label>
                        <input type="text" class="form-control" name="name" placeholder="Full Name" value="{{#each userFormData}}{{#if name}}{{name}}{{/if}}{{/each}}
            {{#if userFormData.name}}{{userFormData.name}}{{/if}}"/>
                        <div class="text-danger">
                            {{userFormData.nameError}}
                        </div>
                      </div>
                    </div>
                    <div class="col-lg-6">
                      <div class="form-group">
                        <label class="form-control-label" for="input-email">Age</label>
                        <input type="text" id="input-email" class="form-control" name="age" placeholder="Age" value="{{#each userFormData}}{{#if age}}{{age}}{{/if}}{{/each}}
{{#if userFormData.age}}{{userFormData.age}}{{/if}}" />
                        <div class="text-danger">
                            {{userFormData.ageError}}
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-lg-6">
                      <div class="form-group">
                        <label class="form-control-label" for="input-first-name">Email</label>
                        <input type="email" id="input-first-name" class="form-control" name="email" placeholder="Email" value="{{#each userFormData}}{{#if email}}{{email}}{{/if}}{{/each}}
{{#if userFormData.email}}{{userFormData.email}}{{/if}}" />
            <div class="text-danger">
                {{userFormData.emailError}}
            </div>
                      </div>
                    </div>
                    <div class="col-lg-6">
                      <div class="form-group">
                        <label class="form-control-label" for="input-last-name">Password</label>
                        <input type="password" class="form-control" name="password" placeholder="Password" value="{{#each userFormData}}{{#if password}}{{password}}{{/if}}{{/each}}
{{#if userFormData.password}}{{userFormData.password}}{{/if}}"/>
                        <div class="text-danger">
                            {{userFormData.passwordError}}
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-12 text-right">
                        <button type="submit" class="btn btn-sm btn-primary"><i class="fa fa-database"></i> Submit</button>
                </div>
              </form>
              
            </div>
          </div>
        </div>
      </div>
    </div>



